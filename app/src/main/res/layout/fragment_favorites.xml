<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="2dp"
        app:cardElevation="1dp"
        android:layout_marginTop="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#fff"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/pw_dianji"
        android:id="@+id/ll_local_backup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/sdkbf"
            android:textColor="@color/buk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本机备份"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/additemtext"/>

    <LinearLayout
        android:background="@drawable/pw_dianji"
        android:id="@+id/ll_native_recovery"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:layout_gravity="center"
            android:textSize="15dp"
            android:drawableLeft="@drawable/sdkhf"
            android:layout_marginLeft="20dp"
            android:textColor="@color/buk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本机恢复 "/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/additemtext"/>

    <LinearLayout
        android:background="@drawable/pw_dianji"
        android:id="@+id/ll_cloud_backup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">



        <TextView
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="@color/buk"
            android:drawableLeft="@drawable/ydsc"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云端备份"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/additemtext"/>

    <LinearLayout
        android:id="@+id/ll_cloud_recovery"
        android:background="@drawable/pw_dianji"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:drawableLeft="@drawable/ydxz"
            android:textColor="@color/buk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云端恢复"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/additemtext"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>