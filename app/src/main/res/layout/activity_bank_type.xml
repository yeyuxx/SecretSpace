<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#e7eaef"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/black_one"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="45dp">

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/bt_bank_type_back"
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:layout_height="20dp"
            android:background="@drawable/del_back"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/toolbar_shadow"/>

    <ListView
        android:layout_width="match_parent"
        android:divider="@null"
        android:dividerHeight="20dip"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:layoutAnimation="@anim/anim_listview_item"
        android:id="@+id/lv_bank_type"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>