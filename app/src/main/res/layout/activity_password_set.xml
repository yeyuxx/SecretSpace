<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@drawable/set_pw_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <EditText
            android:hint="创建密码"
            android:inputType="textPassword"
            android:id="@+id/one_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_one"
             />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <EditText
            android:hint="确认密码"
            android:layout_marginTop="27dp"
            android:inputType="textPassword"
            android:id="@+id/two_password"
            android:layout_width="300dp"
            android:textColor="@color/black_one"
            android:layout_height="45dp"
            android:layout_below="@+id/one_password"
            android:layout_alignStart="@+id/one_password" />
    </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_gravity="center"
            android:textSize="17dp"
            android:textColor="@android:color/white"
            android:text="@string/bt_query"
            android:background="@drawable/shape_set_password_bg"
            android:id="@+id/query_password"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/two_password"
            android:layout_alignStart="@+id/two_password" />

</LinearLayout>